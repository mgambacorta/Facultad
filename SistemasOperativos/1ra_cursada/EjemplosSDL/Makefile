CC=g++
CFLAGS=-c -Wall -I./
LDFLAGS=-pthread -LSDL -lSDL

SOURCES_SDL_EXAMPLE_1=sdl_example.c
OBJECTS_SDL_EXAMPLE_1=$(SOURCES_SDL_EXAMPLE_1:.c=.o)
EXEC_SDL_EXAMPLE_1=sdl_example_1

SOURCES_SDL_EXAMPLE_2=sdl_example_2.c
OBJECTS_SDL_EXAMPLE_2=$(SOURCES_SDL_EXAMPLE_2:.c=.o)
EXEC_SDL_EXAMPLE_2=sdl_example_2


BINARIES=$(EXEC_SDL_EXAMPLE_1) $(EXEC_SDL_EXAMPLE_2)

all: $(SOURCES_SDL_EXAMPLE_1) $(SOURCES_SDL_EXAMPLE_2) $(BINARIES)


$(EXEC_SDL_EXAMPLE_1): $(OBJECTS_SDL_EXAMPLE_1)
	$(CC) $(LDFLAGS) $(OBJECTS_SDL_EXAMPLE_1) -o $@ $(LDFLAGS)

$(EXEC_SDL_EXAMPLE_2): $(OBJECTS_SDL_EXAMPLE_2)
	$(CC) $(LDFLAGS) $(OBJECTS_SDL_EXAMPLE_2) -o $@ $(LDFLAGS)



.c.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	-rm *~ $(BINARIES) *.o
	

